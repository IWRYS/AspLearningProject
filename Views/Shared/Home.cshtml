@model IEnumerable<Employee>

@{
    ViewBag.Title = "Employees";
}

<nav class="navbar navbar-expand-lg bg-dark navbar-dark">
    <ul class="navbar-nav">
        <li class="nav-item m-1">
            <a asp-action="CreateEmployee" asp-controller="Employees">Create</a>
        </li>
        <li class="nav-item m-1">
            <a asp-action="index" asp-controller="home">Search</a>
        </li>

    </ul>
</nav>

<div class="card-deck">



    @foreach (var employee in Model)
    {
        <div class="card m-3">
            <div class="card-header m-1">
                <h3> @employee.Name</h3>
                <div class="card-footer text-center m-1">
                    <a asp-controller="Employees" asp-action="GetEmployeeById" asp-route-id="@employee.EmployeeId"
                       class="btn btn-primary m-1">Details</a>

                    <a href="#" class="btn btn-primary m-1">Edit</a>

                    <a asp-controller="Employees" asp-action="Delete" asp-route-id="@employee.EmployeeId"
                    class="btn btn-danger m-1">Delete</a>

                </div>
            </div>
        </div>
    }
</div>