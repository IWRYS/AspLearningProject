@model IEnumerable<Employee>

@{
    ViewBag.Title = "Employees";
}

<nav class="navbar navbar-expand-lg bg-light navbar-dark m-1">
    <ul class="navbar-nav">
        
            <li class="nav-item m-1">
                <a asp-action="CreateEmployee" asp-controller="Employees" class="btn btn-primary">Create</a>
            </li>
            <li class="nav-item m-1">
                <form asp-action="GetEmployeeById" asp-controller="Employees" method="get">
                   <label>Id:</label> <input type="number" name="id" value="1">
                    <input type="submit" value="Search" class="btn btn-primary" />
                </form>
            </li>
        
    </ul>
</nav>

<div class="card-deck">

    @foreach (var employee in Model)
    {
        <div class="card m-3">
            <div class="card-header m-1">
                <h3> @employee.Name</h3>
                <div class="card-footer text-center m-1">
                    <a asp-controller="Employees" asp-action="GetEmployeeById" asp-route-id="@employee.EmployeeId"
                       class="btn btn-primary m-1">Details</a>
                </div>
            </div>
        </div>
    }
</div>