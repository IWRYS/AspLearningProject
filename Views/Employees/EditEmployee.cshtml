@model Employee

@{

    ViewBag.Title = "Edit Employee";
}

<h1 align="center">@ViewBag.Title</h1>

<form asp-controller="Employees" asp-action="EditEmployee" method="post">
    <input hidden asp-for="EmployeeId" />
    <div class="row justify-content-center m-3">
        <div class="col-sm-8">
            <div class="card">
                <div class="card-body text-center">
                    <div>
                        <label asp-for="@Model.Name">Name</label>
                        <input asp-for="@Model.Name" />
                        <span asp-validation-for="Name" class="text-danger"></span>

                    </div>
                    <div>
                        <label asp-for="@Model.Email">Email</label>
                        <input asp-for="@Model.Email" />
                        <span asp-validation-for="Email" class="text-danger"></span>

                    </div>

                    <div>
                        <label asp-for="@Model.TownId">TownId</label>
                        <input asp-for="@Model.TownId" />
                    </div>
                    <div>
                        <label asp-for="@Model.Department">Department</label>
                        <select asp-for="@Model.Department" asp-items="Html.GetEnumSelectList<Departament>()"></select>
                        <span asp-validation-for="Department" class="text-danger"></span>
                    </div>

                </div>
                <div align="center">
                    <button type="submit" class="btn btn-primary">Edit</button>
                    <a asp-controller="home" asp-action="index" class="btn btn-primary align-content-center">Cancel</a>
                </div>

            </div>
        </div>
   </div>
</form>

